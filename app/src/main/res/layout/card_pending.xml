<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="12dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="2dp"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/card_layout_admin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <TextView
            android:id="@+id/pending_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:padding="4dp"/>

        <View
            android:id="@+id/line_view1"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            />

        <TextView
            android:id="@+id/pending_card_adm_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginEnd="4dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/pending_card_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginEnd="4dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/pending_card_hostel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginEnd="4dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/pending_card_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginEnd="4dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/pending_card_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginEnd="4dp"
            android:padding="4dp"/>

        <View
            android:id="@+id/line_view2"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            />

        <TextView
            android:id="@+id/pending_card_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/pending_card_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginEnd="4dp"
            android:padding="4dp"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>