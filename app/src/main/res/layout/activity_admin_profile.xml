<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminProfileActivity">

    <TextView
        android:id="@+id/txt_your_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Profile:"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"

        />

    <TextView
        android:id="@+id/txt_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"
        android:layout_below="@id/txt_your_profile"
        />

    <TextView
        android:id="@+id/txt_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"
        android:layout_below="@id/txt_profile_name"
        />

    <TextView
        android:id="@+id/txt_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"
        android:layout_below="@id/txt_profile_title"
        />

    <TextView
        android:id="@+id/txt_profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"
        android:layout_below="@id/txt_profile_email"
        />


</RelativeLayout>