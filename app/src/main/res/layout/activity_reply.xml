<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.ReplyActivity"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">

    <TextView
        android:id="@+id/reply_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"/>

    <View
        android:id="@+id/line_view1"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        />

    <TextView
        android:id="@+id/reply_adm_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/reply_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/reply_hostel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/reply_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/reply_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"/>

    <View
        android:id="@+id/line_view2"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        />

    <TextView
        android:id="@+id/reply_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/reply_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"
        android:textColorLink="@color/colorPrimary"
        android:autoLink="web"
        android:linksClickable="true"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/send_reply_text"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:hint="@string/enter_your_reply"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_txt_reply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_send_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="send"
        android:layout_marginTop="28dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
       />





</LinearLayout>